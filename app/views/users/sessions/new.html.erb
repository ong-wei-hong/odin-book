<h2 class="bold">Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" },
								label_html: { class: 'top-margin-1' },
								placeholder: 'Mail@example.com' %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" },
								label_html: { class: 'top-margin-1' },
								placeholder: 'Password'  %>
    <%= f.input :remember_me, label_html: { class: 'flex top-margin-1' }, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: 'top-margin-1' %>
  </div>
<% end %>


<div class="top-margin-1">
	<%= link_to 'Sign up', new_user_registration_path, class: 'link' %>
</div>
